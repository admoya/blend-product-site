		"firebase-local": "cd firebase-local && firebase emulators:start --import mockData/"
	},
	"devDependencies": {
		"@playwright/test": "^1.37.0",
		"@sveltejs/adapter-auto": "^2.1.0",
		"@sveltejs/adapter-netlify": "^2.0.8",
		"@sveltejs/kit": "^1.22.6",
		"@typescript-eslint/eslint-plugin": "^6.4.0",
		"@typescript-eslint/parser": "^6.4.0",
		"eslint": "^8.47.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.32.4",
		"firebase": "^10.1.0",
		"firebase-admin": "^11.10.1",
		"firebaseui": "^6.1.0",
		"prettier": "^3.0.1",
		"prettier-plugin-svelte": "^3.0.3",
		"stripe": "^12.18.0",
		"svelte": "^4.2.0",
		"svelte-check": "^3.5.0",
		"tslib": "^2.6.1",
		"typescript": "^5.1.6",
		"vite": "^4.4.9",
		"vitest": "^0.34.1"
